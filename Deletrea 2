# Pide una palabra y te devuelve sus letras y su longitud. Me dice cu치ntas vocales tiene
def esVocal(letra):
    respuesta=False
    if(letra=='a' or letra=='e' or letra=='i' or letra=='o' or letra=='u'):
        respuesta=True
    return(respuesta)
    

def deletreo():
    palabra=input("Dime una palabra mi patr칩n: ")
    cuentavocales=0
    cuentaconsonantes=0
    for cont in range(0,len(palabra)):
        print(palabra[cont]+ ' ')
        if(esVocal(palabra[cont])==True):
            cuentavocales=cuentavocales+1
        else:
            cuentaconsonantes=cuentaconsonantes+1
    print("Tiene "+str(cuentavocales) +" vocales patr칩n")
    print("Tiene "+str(cuentaconsonantes) +" consonantes patr칩n")

deletreo()
